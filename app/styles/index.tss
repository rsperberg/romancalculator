	height			: Alloy.Globals.button3Height,
	backgroundColor	: '#7682ed',//'#f3eba3', // a khaki
}
".view_num_left[platform=android]": {
	width			: '31%',
	height			: '19%',
	font: {
		fontFamily	: 'Share-Bold',
	},
}
".view_num": {
	top				: 0,
