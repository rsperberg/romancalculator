".container": {
	top				: 0,
	backgroundColor	: '#f3eba3', // a khaki,
	layout			: 'vertical',
	height			: Ti.UI.FILL,
}

"#display_container": {
	top				: '20dp',
	backgroundColor	: '#000',
}
"#display_container[platform=android]": {
	top				: 0,
}
"#lbl_display": {
	width			: Ti.UI.FILL,
	right			: '2dp',
	backgroundColor	: 'transparent',
	color			: '#fff',
	font: {
		fontSize		: 44,
		fontFamily	: 'AvenirNextCondensed-DemiBold',//'AvenirNextCondensed-Bold',
	},
	textAlign		: Ti.UI.TEXT_ALIGNMENT_RIGHT,
}
"#lbl_display[platform=android]": {
	font: {
		fontFamily	: 'Share',
	},
}
".view_row_container": {
	top				: '10dp',
	left				: '10dp',
	right			: '10dp',
	layout			: 'horizontal',
	horizontalWrap	: false,
	height			: Alloy.Globals.button3Height,
	width			: Ti.UI.FILL,
//	backgroundColor	: "yellow",
}
".view_row_container[platform=android]": {
	height			: '19%',
	font: {
		fontFamily	: 'Share-Bold',
	},
}
