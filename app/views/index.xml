<Alloy>
	<Window class="container">
    	    <View id='display_container'>
    	        <Label id='lbl_display' onClick="showHideArabic"></Label>
    	        <View id='extras_container' layout='horizontal'>
    	        		<Label id='lbl_mstore'></Label>
    	        		<Label id='lbl_arabic'></Label>
    	        </View>
    	    </View>
	    <View id="row_1_container" class="view_row_container">
    	        <View class='view_num_left'>
            		    <Label id="lbl_m">M</Label>
            	</View>
            	<View class='view_num'>
                    <Label id="lbl_d">D</Label>
            </View>
            <View class='view_operator'>
                    <Label id="lbl_delete"></Label>
            </View>
        </View>
        <View id="row_2_container" class="view_row_container">
                <View class='view_num_left'>
                    <Label id="lbl_c">C</Label>
                </View>
                <View class='view_num'>
                    <Label id="lbl_l">L</Label>
                </View>
                <View class='view_operator'>
                    <Label id="lbl_clear">N</Label>
                </View>

        </View>
        <View id="row_3_container" class="view_row_container">
                <View class='view_num_left'>
                    <Label id="lbl_x">X</Label>
                </View>
                <View class='view_num'>
                    <Label id="lbl_v">V</Label>
                </View>
                <View class='view_operator'>
                    <Label id="lbl_plus">+</Label>
                </View>
        </View>
        <View id="row_4_container" class="view_row_container">
                <View class='view_num_left'>
                    <Label id="lbl_i">I</Label>
                </View>
                <View class='view_operator_dbl'>
                    <Label id="lbl_equals">=</Label>
                </View>

        </View>
	</Window>
</Alloy>